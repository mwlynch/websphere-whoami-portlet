<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" id="whoami"
	version="2.0">

	<portlet>
		<portlet-name>WhoamiPortlet</portlet-name>
		<display-name>WhoamiPortlet</display-name>
		<portlet-class>com.example.WhoamiPortlet
		</portlet-class>

		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>view</portlet-mode>
		</supports>

		<supported-locale>en_ZA</supported-locale>

		<portlet-info>
			<title>WhoamiPortlet</title>
		</portlet-info>
	</portlet>
	
	<container-runtime-option>
		<name>javax.portlet.actionScopedRequestAttributes</name>
		<value>true</value>
	</container-runtime-option>
	

</portlet-app>
